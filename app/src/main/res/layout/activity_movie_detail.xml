<?xml version="1.0" encoding="utf-8"?>


<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#000"
    tools:context="com.example.android.movieapp.MovieDetail">

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        >
    <ProgressBar
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:id="@+id/pb2_loading_indicator"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"

        />

    <TextView
        android:id="@+id/tv_movie_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginTop="34dp"
        android:textSize="26sp"
        android:textColor="#ffff"
        android:text="Mohamed Tony"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/bacckground_poster"
        android:layout_toEndOf="@+id/poster" />

    <ImageView
        android:id="@+id/bacckground_poster"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
         />

    <ImageView
        android:id="@+id/poster"
        android:layout_width="100dp"
        android:layout_height="160dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/tv_movie_title"
        android:layout_marginStart="22dp"
        android:scaleType="centerCrop"
       />

    <TextView
        android:id="@+id/tv_release_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:textColor="#ffff"
        android:textSize="18sp"
        android:text="Mohamed Tony"
        android:layout_below="@+id/tv_movie_title"
        android:layout_alignStart="@+id/tv_movie_title" />

    <TextView
        android:id="@+id/tv_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffff"
        android:textSize="18sp"
        android:text="Mohamed Tony"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_alignBaseline="@+id/tv_release_date"
        android:layout_alignBottom="@+id/tv_release_date"
        android:layout_toEndOf="@+id/tv_release_date" />

    <TextView
        android:id="@+id/tv_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffff"
        android:textSize="18sp"
        android:text="Mohamed Tony"
        android:layout_below="@+id/tv_duration"
        android:layout_alignStart="@id/tv_release_date" />

    <TextView
        android:id="@+id/tv_overview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignStart="@+id/poster"
        android:layout_below="@+id/tv_release_date"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="110dp"
        android:text="Mohamed Tony"
        android:textColor="#ffff"
        android:textSize="18sp"
        />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_duration"
            android:layout_below="@+id/tv_duration"
            android:layout_marginStart="18dp"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/RecyclerTrailer"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scrollbars="vertical"
            android:layout_below="@+id/tv_overview"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="29dp">

        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>


</ScrollView>

